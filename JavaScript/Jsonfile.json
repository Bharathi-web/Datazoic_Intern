{
    "fields": [
        {
            "label": "Employee ID :",
            "name": "emp_id",
            "type": "text",
            "required": true,
            "enabled": true
        },
        {
            "label": "Employee Name :",
            "name": "emp_name",
            "type": "text",
            "required": true,
            "enabled": true,
            "maxLength": 25,
            "validation": {
                "pattern": "^[A-Za-z ]+$",
                "message": "Name must contain only alphabets."
            }
        },
        {
            "label": "Email :",
            "name": "email",
            "type": "email",
            "required": true,
            "enabled": true
        },
        {
            "label": "Phone :",
            "name": "phone",
            "type": "tel",
            "required": false,
            "enabled": true,
            "maxLength": 10,
            "validation": {
                "pattern": "^\\d{10}$",
                "message": "Phone number must be exactly 10 digits."
            }
        },
        {
            "label": "Department :",
            "name": "department",
            "type": "select",
            "required": true,
            "enabled": true,
            "options": [
                {
                    "label": "-- Select --",
                    "value": ""
                },
                {
                    "label": "Development",
                    "value": "dev"
                },
                {
                    "label": "Testing",
                    "value": "test"
                },
                {
                    "label": "HR",
                    "value": "hr"
                },
                {
                    "label": "Support",
                    "value": "support"
                }
            ]
        },
        {
            "label": "Position :",
            "name": "position",
            "type": "select",
            "required": false,
            "enabled": true,
            "options": [
                {
                    "label": "Junior",
                    "value": "junior"
                },
                {
                    "label": "Senior",
                    "value": "senior"
                },
                {
                    "label": "Lead",
                    "value": "lead"
                }
            ]
        },
        {
            "label": "Task Role :",
            "name": "task_role",
            "type": "multi-select",
            "required": false,
            "enabled": true,
            "options": [
                {
                    "label": "Developer",
                    "value": "dev"
                },
                {
                    "label": "Tester",
                    "value": "test"
                },
                {
                    "label": "Designer",
                    "value": "design"
                },
                {
                    "label": "Support",
                    "value": "support"
                }
            ]
        },
        {
            "label": "Gender :",
            "name": "gender",
            "type": "select",
            "required": true,
            "enabled": true,
            "options": [
                {
                    "label": "Male",
                    "value": "male"
                },
                {
                    "label": "Female",
                    "value": "female"
                },
                {
                    "label": "Other",
                    "value": "other"
                }
            ]
        },
        {
            "label": "Address :",
            "name": "address",
            "type": "group",
            "enabled": true,
            "fields": [
                {
                    "label": "Street",
                    "name": "street",
                    "type": "text",
                    "required": false,
                    "enabled": true
                },
                {
                    "label": "City",
                    "name": "city",
                    "type": "text",
                    "required": false,
                    "enabled": true
                },
                {
                    "label": "Zip Code",
                    "name": "zip",
                    "type": "number",
                    "required": false,
                    "enabled": true
                }
            ]
        },
        {
            "label": "Action :",
            "name": "action",
            "type": "checkbox",
            "required": true,
            "enabled": true,
            "options": [
                {
                    "label": "New Task",
                    "value": "newtask"
                },
                {
                    "label": "Modify Task",
                    "value": "modifytask"
                }
            ]
        },
        {
            "label": "Manager Assigned :",
            "name": "manager",
            "type": "select",
            "required": false,
            "enabled": true,
            "options": [
                {
                    "label": "-- Select --",
                    "value": ""
                },
                {
                    "label": "Manager A",
                    "value": "managera"
                },
                {
                    "label": "Manager B",
                    "value": "managerb"
                },
                {
                    "label": "Manager C",
                    "value": "managerc"
                }
            ]
        },
        {
            "label": "Task Info :",
            "name": "task_info",
            "type": "group",
            "enabled": true,
            "fields": [
                {
                    "label": "Task Title",
                    "name": "taskdetails",
                    "type": "text",
                    "enabled": true
                },
                {
                    "label": "Due Date",
                    "name": "due_date",
                    "type": "date",
                    "required": false,
                    "enabled": true
                },
                {
                    "label": "Priority",
                    "name": "priority",
                    "type": "radio",
                    "required": false,
                    "enabled": true,
                    "options": [
                        {
                            "label": "High",
                            "value": "high"
                        },
                        {
                            "label": "Medium",
                            "value": "medium"
                        },
                        {
                            "label": "Low",
                            "value": "low" 
                        }
                    ]
                }
            ]
        },
        {
            "label": "Comments",
            "name": "comments",
            "type": "textarea",
            "required": false,
            "enabled": true
        }
    ]
}